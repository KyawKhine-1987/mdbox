<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/uparrow" />
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="1%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <stroke
                    android:width="-60dp"
                    android:color="#f2e838" />
            </shape>
        </rotate>
    </item>
</layer-list>