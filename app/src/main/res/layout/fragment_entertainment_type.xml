<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.witts.mdbox.fragments.EntertainmentTypeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="10">
            <ImageView
                android:id="@+id/ivDetailImageContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20dp"
                android:src="@drawable/pool">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roomdetailbackgroundnew"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtlabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Pool"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/entertainmenthighlight"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5"
                    android:orientation="vertical"
                    android:background="#802b515c"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:id="@+id/imguparrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:src="@drawable/uparrow"
                        android:background="#80000000"/>
                    <LinearLayout
                        android:id="@+id/llinfocontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <ScrollView
                            android:id="@+id/svinfocontainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="15dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* Name :"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:id="@+id/tvEntertain_Name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="游 泳 館"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* Time :"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:id="@+id/tvTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10: 00 ~ 22: 00 "
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* Price :"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:id="@+id/tvPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1,000 yen / day"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* Rental Item:"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="\tSwimming clothing:"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:id="@+id/tvRental1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="300 yen / day"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="\tFloating wheel:"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:id="@+id/tvRental2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="300 yen / day"
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:id="@+id/tvOther_Info"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="* Our Hotel's pool is easy to escape from congestion The popularity is highly enclosed every year when you can spend a lot of time, and in recent years there are many cases where you can use the spa and jacuzzi in combination with the fulfillment of events, such as night boules and events being mined Relaxation effect is also perfect."
                                        android:textColor="#fff"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgdownarrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:src="@drawable/downarrow"
                        android:background="#80000000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roomtypebackground">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvchooseentertainmenttype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
