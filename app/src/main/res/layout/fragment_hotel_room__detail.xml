<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roomdetailbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_marginRight="30dp">
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/rvchooseroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
        <android.support.design.widget.TabLayout
            android:id="@+id/hotelDetail_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabMode="scrollable"
            app:tabBackground="@drawable/tab_color_selector_room"
            app:tabTextColor="@color/secondary_text_default_material_dark"
            app:tabSelectedTextColor="@android:color/white"
            app:tabIndicatorColor="#c6e063"
            android:elevation="20dp"
            app:tabIndicatorHeight="0dp"
            android:fillViewport="false"
            app:tabPaddingStart="15dp"
            app:tabPaddingEnd="15dp"/>
    </FrameLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow"
                android:layout_marginLeft="140dp"/>

        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/hotelDetail_viewpager"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</FrameLayout>
