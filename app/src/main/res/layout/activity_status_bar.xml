<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:context="com.witts.mdbox.activity.LocationActivity">
    <!--android:background="@drawable/roomdetailbackground"-->

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginTop="@dimen/divider_two"
        android:layout_weight="1"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        tools:text="2016/12/02 金曜日 14:17"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/thirty"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWeather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/six"
            android:src="@drawable/weather"/>

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/divider_two"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size"
            android:textStyle="bold"
            tools:text="18-20°C"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivWiFi"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_five"
        android:layout_marginRight="@dimen/thirty"
        android:layout_weight="0"
        android:src="@drawable/wifi_signal_full"/>

</LinearLayout>