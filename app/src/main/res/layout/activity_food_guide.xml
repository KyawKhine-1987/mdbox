<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roomdetailbackground">

    <include
        android:id="@+id/StatusBar"
        layout="@layout/activity_status_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginRight="30dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/tlfoodCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabMaxWidth="0dp"
                app:tabMode="scrollable"
                app:tabBackground="@drawable/tab_color_selector_food"
                app:tabTextColor="@color/secondary_text_default_material_dark"
                app:tabSelectedTextColor="@android:color/white"
                app:tabIndicatorColor="#ffc63d"
                android:elevation="20dp"
                app:tabIndicatorHeight="0dp"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow"
                android:layout_marginLeft="240dp"
                android:focusable="true"/>

        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpfoodDetail"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"/>

</FrameLayout>

